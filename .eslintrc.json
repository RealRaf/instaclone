{
    "extends": ["airbnb-typescript"],
    "parserOptions": {
        "project": "./tsconfig.json"
    },
    "rules": {
        "@typescript-eslint/member-delimiter-style": ["error", {
          "multiline": {
            "delimiter": "none",    // 'none' or 'semi' or 'comma'
            "requireLast": true
          },
          "singleline": {
            "delimiter": "semi",    // 'semi' or 'comma'
            "requireLast": false
          }
        }]
    }
}